<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.Member">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivMemberProfile"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/tvMemberName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginBottom="16sp"
            android:text="@string/hello_world"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvMemberInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text" />
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivMemberProfile"
        android:layout_width="130sp"
        android:layout_height="130sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15sp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16sp"
        android:layout_marginEnd="8sp"
        android:scaleType="centerCrop"
        android:src="@drawable/applogo_35splash" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:id="@+id/bEmail"
        android:layout_marginLeft="50sp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/up_app_mail"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:scaleType="centerCrop"
        android:layout_marginRight="50sp"
        android:src="@drawable/up_app_telephone"
        android:text="Call"
        android:id="@+id/bCall"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/bEmail"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout" />
</RelativeLayout>

